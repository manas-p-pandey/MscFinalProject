<div id="cesiumContainer"></div>

<script>
    var viewer = new Cesium.Viewer("cesiumContainer", {
        imageryProvider: new Cesium.OpenStreetMapImageryProvider({
            url: 'https://a.tile.openstreetmap.org/'
        }),
        baseLayerPicker: false,
        timeline: false,
        animation: true
    });

    viewer.camera.flyTo({
        destination: Cesium.Cartesian3.fromDegrees(-0.1357, 51.4975, 5000.0),
        orientation: {
            heading: Cesium.Math.toRadians(0.0),
            pitch: Cesium.Math.toRadians(-45.0),
            roll: 0.0
        }
    });

    viewer.entities.add({
        name: "Traffic Congestion Point",
        position: Cesium.Cartesian3.fromDegrees(-0.1357, 51.4975),
        point: { pixelSize: 10, color: Cesium.Color.RED },
        label: { text: "Traffic Hotspot", font: "14pt sans-serif" }
    });
</script>
